#!/bin/bash
usage() {
cat <<EOF
Usage: 
	$(basename $0)

<Description>

options:
$(sed -n '/^#PARAMS/,/PARAMS END/{
    /OPTARG/  s/^[\t ]*\([^)]*\))[^#]*;; *# *\(.*\)$/\1 <val>: \2/p;
    /OPTARG/! s/^[\t ]*\([^)]*\))[^#]*;; *# *\(.*\)$/\1: \2/p}' $0)
EOF
}

#PARAMS
while getopts "nvh" opt; do
    case "$opt" in
        n) dryrun=1;;           #don't actually do anything
        v) verbose=1;;          #be more verbose
        h) usage; exit 0;;      #show this help
        *) echo "Unkown Option $opt" >&2; usage; exit 1;;
    esac
done
shift $((OPTIND-1))
#PARAMS END

